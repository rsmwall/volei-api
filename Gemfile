# Gemfile

source 'https://rubygems.org'

# Web Framework
gem 'sinatra', require: 'sinatra/base'
gem 'puma' # Servidor web
gem 'rake'
gem "rackup", "~> 2.2"

# Banco de Dados
gem 'activerecord'
gem 'sinatra-activerecord'

# JSON
gem 'json'

gem 'rack-cors'
gem 'sqlite3'
gem 'bcrypt'

# Ferramentas de Desenvolvimento/Teste
group :development, :test do
  gem 'pry-byebug' # Para debug
  gem 'rspec'      # Para testes
  gem 'dotenv'
end
